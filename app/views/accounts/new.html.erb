<h1 class="display-4"> Create Accounts </h1>

<div class="row">
    <div class="col">
        <% if @account.errors.any? %>
            <h2>There were <%= @account.errors.count %> errors</h2>
            <ul>
                <% @account.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        <% end %>
    </div>
</div>


<div class="row align-items-end">
    <div class="col">
        <%= form_with(url: "/accounts", local: true, method: 'post') do |form| %>
            <div class="form-group">
                <%= form.label :Name %>
                <%= form.text_field :name, id: :name, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= form.label :Category %>
                <%= form.text_field :category, id: :category, class: 'form-control' %>
            </div>
                
            <div class="form-group">
                <%= form.submit 'New', class: "btn btn-success" %>
            </div>
        <% end %>
    </div>
    <div class="col">
    </div>
    <div class="col">
    </div>
        
    
</div>

